        android:hint="123"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tvDist1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tvDist1"
        app:layout_constraintRight_toLeftOf="@+id/guidelineV50"
        app:layout_constraintTop_toTopOf="@+id/tvDist1"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
